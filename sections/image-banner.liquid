<div class="wrapper">
  <a href="{{ section.settings.link }}" title="{{ section.settings.alt_text }}">
    {{ section.settings.image_desktop | image_url: width: 2500 | image_tag: alt: section.settings.alt_text , loading: 'lazy', class: "hidden md:block object-center object-cover w-full h-auto" }}
    {{ section.settings.image_tablet | image_url: width: 1040 | image_tag: alt: section.settings.alt_text , loading: 'lazy', class: "hidden sm:block md:hidden object-center object-cover w-full h-auto" }}
    {{ section.settings.image_mobile | image_url: width: 1040 | image_tag: alt: section.settings.alt_text , loading: 'lazy', class: "sm:hidden object-center object-cover w-full h-auto" }}
    <span class="sr-only">{{ section.settings.alt_text }}</span>
  </a>
</div>

{% schema %}
  {
    "name": "Image Banner",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image_desktop",
        "label": "Imagen desktop"
      },
      {
        "type": "image_picker",
        "id": "image_tablet",
        "label": "Imagen Tablet"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Imagen mobile"
      },
      {
        "type": "text",
        "id": "alt_text",
        "label": "Texto alternativo"
      },
      {
        "type":"url",
        "id": "link",
        "label": "Link"
      }
    ],
    "presets": [
      {
        "name": "Image Banner",
        "category": "image"
      }
    ]
  }
{% endschema %}